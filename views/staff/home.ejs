<% layout('layouts/staffportal')%>
<div class="d-flex flex-row justify-content-between align-items-center">
    <div>
        <h3 class="mt-3 fw-bold"><%= currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1) %></h3>
        <h4 class="fw-light fs-5"><%= currentUser.section %></h4>
    </div>
    <div>
        <% if (currentUser.username === 'admin') { %> 
            <a href="/bcaa/register" class="btn btn-warning d-inline-block">Add a new User</a>
        <% } %> 
        <a href="/bcaa/logout" class="btn btn-secondary ms-auto d-inline-block">Log Out</a>
    </div>
</div>
<hr>
<div class="row my-4">
    <!-- dashboard gallery -->
    <div class="col-md-10 offset-md-1">
        <div class="d-flex flex-row align-items-baseline justify-content-between mb-3">
            <h5 class="fw-light"><span class="fw-bold"><%= num %></span> Post(s) in Total</h5>
            <a href="/bcaa/staffportal/new" class="btn btn-primary">
                New Post
            </a>
        </div>
        <%- include('../partials/dashboardGallery') %> 
    </div>
    
</div>