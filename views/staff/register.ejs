<% layout('layouts/staffportal')%>
<div class="row mb-5 mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="text-center mb-3">Register a new User</h3>
                <form action="/bcaa/register" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="section" class="form-label">Section</label>
                        <select id="section" class="form-control" name="section" required>
                            <option value="Flight Operations">Flight Operations</option>
                            <option value="Airworthiness">Airworthiness</option>
                            <option value="Security">Security</option>
                            <option value="Personal Licensing">Personal Licensing</option>
                            <option value="ANS">ANS</option>
                            <option value="Aerodrome">Aerodrome</option>
                            <option value="Secretariat Services">Secretariat Services</option>
                        </select>                    
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


